<header class="l_header animate__animated <%= theme.animate.header %>">
	<div class='wrapper'>
		<div class="nav-main container container--flex">
			<a class="logo flat-box" href='<%= url_for("/") %>' >
				<%- config.title %>
			</a>
			<div class='menu'>
				<ul class='h-list'>
					<% (theme.menu||[]).forEach(function(value){ %>
						<li class="menu-item-<%=value.name%> animate__animated <%= theme.animate.header %>" style="animation-duration: 1.5s">
							<a class='flat-box nav <% if (theme.headereffect.menuhover) { %>btn btn-primary btn-ghost btn-shine<% } else { %>buttonoeffe<% } %>' href='<%=url_for(value.url)%>'>
								<i class="<%=value.slug%>" aria-hidden="true"></i>&nbsp;
								<%- __('header.' + value.name) %>
							</a>
						</li>
					<%})%>
				</ul>
			</div>
			<% if (theme.search.enable === true) { %>
				<div class="m_search menu-item-search animate__animated <%= theme.animate.header %>"style="animation-duration: 2s">
					<form name="searchform" class="menu-item-search form u-search-form">
						<input type="text" class="input u-search-input" placeholder="<%- __('header.search') %>" />
						<span class="icon icon-search"></span>
					</form>
				</div>
			<% } %>
			<ul class='switcher h-list'>
				<% if (theme.search.enable === true) { %>
					<li class='s-search animate__animated <%= theme.animate.header %>' style="animation-duration: 1.5s"><a href='javascript:void(0)'><span class="icon icon-search flat-box"></span></a></li>
				<% } %>
				<li class='s-menu animate__animated <%= theme.animate.header %>' style="animation-duration: 2s"><a href='javascript:void(0)'><span class="icon icon-menu flat-box"></span></a></li>
			</ul>
		</div>
		
		<div class='nav-sub container container--flex'>
			<ul class='switcher h-list'>
				<li class='s-comment'><a href='javascript:void(0)'><span class="icon icon-chat_bubble_outline flat-box"></span></a></li>
				<li class='s-top'><a href='javascript:void(0)'><span class="icon icon-arrow_upward flat-box"></span></a></li>
				<li class='s-toc'><a href='javascript:void(0)'><span class="icon icon-format_list_numbered flat-box"></span></a></li>
			</ul>
		</div>
	</div>
</header>
<aside class="menu-phone">
	<nav>
		<% (theme.menu||[]).forEach(function(value, key) {
					if (value.url && value.slug && value.name) { %>
			<a href="<%= url_for(value.url) %>" class="nav-<%= value.slug %> nav">
				<i class="<%=value.slug%>" aria-hidden="true"></i>&nbsp;<%- __('header.' + value.name) %>
			</a>
		<% } }); %>
	</nav>
</aside>
